<?xml version="1.0" encoding="UTF-8"?>
<casConsumerDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <implementationName>org.barcelonamedia.uima.consumer.SQLAnnotationsConsumer.DBAnnotationsCASConsumer</implementationName>
  <processingResourceMetaData>
    <name>DBAnnotationsCASConsumer</name>
    <description/>
    <version>1.0</version>
    <vendor/>
    <configurationParameters>
      <configurationParameter>
        <name>DBMS</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>Server</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>Port</name>
        <type>Integer</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>Database</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>User</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>Password</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>table</name>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>seg_type</name>
        <description>Annotation which database table fields are generated from.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>features</name>
        <description>Specifies which features are to be retrieves and stored in database.</description>
        <type>String</type>
        <multiValued>true</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>fullURI</name>
        <description>Specifies whether whole document URI or document name is to be used as document ID into the database.</description>
        <type>Boolean</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>features_column_names</name>
        <description>Names of the relational databases columns for the different features.
features_column_names[n] name refers to features[n] feature.</description>
        <type>String</type>
        <multiValued>true</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>features_concat_chars</name>
        <description>Character to be used to concatenate different features. If not specified, default character will be " " for all cases.
If white space has to be specified, it must be setted with the key word "BLANK".
features_concat_chars[n] concat character will be used for features[n] feature.</description>
        <type>String</type>
        <multiValued>true</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>features_whitespace_char</name>
        <description>Character to be used to replace white spaces of features value. If not specified, default character will be "_" for all cases.
If white space has to be specified, it must be setted with the key word "BLANK".
features_whitespace_char[n] concat character will be used for features[n] feature.</description>
        <type>String</type>
        <multiValued>true</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>useExistingTable</name>
        <description>use existing table (if available)
if 'false', fails when table already exists</description>
        <type>Boolean</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>DBMS</name>
        <value>
          <string>MySQL</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>Server</name>
        <value>
          <string>localhost</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>Port</name>
        <value>
          <integer>3306</integer>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>Database</name>
        <value>
          <string>uima_test</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>User</name>
        <value>
          <string>uimauser</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>Password</name>
        <value>
          <string>uimapass</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>table</name>
        <value>
          <string>features</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>seg_type</name>
        <value>
          <string>org.barcelonamedia.uima.ts.Sentence</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>features</name>
        <value>
          <array>
            <string>org.barcelonamedia.uima.ts.Token:coveredText</string>
            <string>org.barcelonamedia.uima.ts.Token:posTag#posTag=NC.*</string>
            <string>org.barcelonamedia.uima.ts.Token:lemma</string>
          </array>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>features_concat_chars</name>
        <value>
          <array>
            <string>BLANK</string>
            <string>BLANK</string>
            <string>BLANK</string>
          </array>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>features_whitespace_char</name>
        <value>
          <array>
            <string>_</string>
            <string>_</string>
            <string>_</string>
          </array>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>fullURI</name>
        <value>
          <boolean>false</boolean>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>features_column_names</name>
        <value>
          <array>
            <string>Token</string>
            <string>POSTag</string>
            <string>Lemma</string>
          </array>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>useExistingTable</name>
        <value>
          <boolean>false</boolean>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <typeSystemDescription/>
    <typePriorities/>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs/>
        <outputs/>
        <languagesSupported/>
      </capability>
    </capabilities>
    <operationalProperties>
      <modifiesCas>false</modifiesCas>
      <multipleDeploymentAllowed>false</multipleDeploymentAllowed>
      <outputsNewCASes>false</outputsNewCASes>
    </operationalProperties>
  </processingResourceMetaData>
  <resourceManagerConfiguration/>
</casConsumerDescription>
